

<div id="slider" class="movie-slider">
<% @movies.each do |movie| %>
   <%= link_to attachment_image_tag(movie, :image, format: 'jpeg', size: "240x426", fallback: "no_image.jpg"), movie_movie_comments_path(movie) %>
   <% end %>
</div>



<section class="section mt-6">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-5">
        <% @movies.each do |movie| %>
          <div class="card mb-6">
            <header class="card-header">
              <p class="card-header-title">
                <%= link_to attachment_image_tag(movie, :image, format: 'jpeg', size: "150x200", fallback: "no_image.jpg") %>
                <%= movie.title %>
                <%= movie.director %>
                <%= movie.actor %>
              </p>
            </header>

            <footer class="card-footer">
               <%= link_to movie_movie_comments_path(movie), class: "button card-footer-item" do %>
                レビューを見る
              <% end %>
              <%= link_to movie_path(movie), class: "button card-footer-item" do %>
                レビューを書く
              <% end %>
            </footer>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

