<h2>作品詳細</h2>

<h4>ジャンル</h4>
<%= @movie.genre.name %>

<h4>作品名</h4>
<%= @movie.title %>

<h4>作品画像</h4>
<%= attachment_image_tag(@movie, :image, size: "320×240", fallback: "no_image.jpg") %>

<h4>監督名</h4>
<%= @movie.director %>

<h4>主演</h4>
<%= @movie.actor %>

<h4>あらすじ</h4>
<%= @movie.explain %>

<div class="comments">
<p>コメント件数：<%= @movie.movie_comments.count %></p>
<% @movie.movie_comments.each do |movie_comment| %>
  <p><%= image_tag('no_image.jpg') %></p>
  <%= movie_comment.customer.name %>
  <%= movie_comment.created_at.strftime('%Y/%m/%d') %><%= movie_comment.comment %>
<% end %>
</div>



<%= form_with model:[@movie, @movie_comment], local: true do |f| %>
  <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
  <%= f.submit "送信する" %>
<% end %>


<%= link_to "一覧に戻る", movies_path %>