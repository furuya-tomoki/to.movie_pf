<div class='row'>
<% if current_customer != customer %>
<% if current_customer.following?(customer) %>
 <%= link_to "フォロー外す", customer_relationships_path(customer.id), method: :delete, class: "btn btn-primary" %>
<% else %>
 <%= link_to "フォローする", customer_relationships_path(customer.id), method: :post, class: "btn btn-success" %>
<% end %>
<% else %>
    <%= link_to '', edit_customer_path(customer), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{customer.id}" %>
  <% end %>
</div>

<table class='table'>
  <tr><%= attachment_image_tag(customer, :image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
  <tr>
	  <th>name</th>
	  <th><%= customer.name %></th>
  </tr>

    <th>フォロー中</th>
    <th><%= link_to customer.followings.count, customer_followings_path(customer) %></th>
  </tr>
  <tr>
    <th>フォロワー</th>
    <th><%= link_to customer.followers.count, customer_followers_path(customer) %></th>
  </tr>
</table>