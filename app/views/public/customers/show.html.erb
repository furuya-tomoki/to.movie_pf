<div class="container">
 <div class="row my-3">
  <div class="ml-5 pl-4">
    <h3 style="background:#DDDDDD">会員情報</h3>
  </div>
 </div>
 <div class="row">
  <div class="col-md-3 text-left">
    <table class="table table-borderless">
     <tr>
       <th>
          <span class=ml-3>
           <% if @customer.id == current_customer.id %>
           <span class="mr-3">会員情報</span>
           <%= link_to '編集する', edit_customer_path(@customer), class: "btn btn-success" %>
           <% end %>
           </span>
       </th>
     </tr>

     <tr>
       <th>
          <span class=ml-3>
           <span class="mr-3">いいね一覧</span>
           <%= link_to '閲覧する', customer_mypage_path(@customer), class: "btn btn-success" %>
           </span>
       </th>
     </tr>
   </table>
  </div>
 </div>

  <div class="row">
  <div class="col-md-7">
   <table class="table table-bordered">
    <tbody>

      <tr>
        <th class="table-secondary">アイコン</th>
        <td><%= attachment_image_tag(@customer, :image, size: "100x100", fallback: "no_image.jpg" ) %></td>
      </tr>

      <tr>
        <th class="table-secondary">名前</th>
        <td><%= @customer.name %></td>
      </tr>

      <tr>
       <th class="table-secondary">フォロー</th>
      <td><%= render 'public/customers/follow', customer: @customer %></td>
      </tr>
    </tbody>
  </div>
 </div>




