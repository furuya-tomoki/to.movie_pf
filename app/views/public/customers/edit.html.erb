<h2>会員情報編集</h2>

<%= form_with model: @customer, url: {controller: 'public/customers', action: 'update' }, local:true do |f| %>



<%= f.label :"名前" %>
<%= f.text_field :name %>


<%= f.label :image %>
<%= f.attachment_field :image, class: "customer_image" %>

<%= f.submit "保存する", class:"btn btn-success" %>
<%= link_to "退会する", unsubscribe_customers_path, method: :get, class:"btn btn-danger" %>


<% end %>