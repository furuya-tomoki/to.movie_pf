   </div>
<% end %>
<!-- お気に入り -->

    </div>
     <div class="col-md-9">
      <div class="text">
       <div class="title">
        <h3>
         <strong><%= @movie.title %></strong>
        </h3>
       </div>
        <p>
         <%= @movie.explain %>
        </p>
          <div class="row">
           <div class="col-md-3">
            <h3>
            <strong>監督名</strong>
            </h3>
