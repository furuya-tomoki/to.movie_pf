<% if movie.favorited_by?(current_customer) %>
  <%= link_to  movie.favorites.count, movie_favorites_path(movie), method: :delete, class: "fas fa-thumbs-up", remote: true %>

<% else %>
  <%= link_to  movie.favorites.count, movie_favorites_path(movie), method: :post, class: "fas fa-thumbs-down", remote: true %>
<% end %>