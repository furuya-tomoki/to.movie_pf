<div class="container">
  <div class="row">
   <div class="col-md-8 mx-auto">
     <div class="my-3 ">作品編集</div>
<%= form_with model: @movie, url: {controller: 'admin/movies', action: 'update' }, local:true do |f| %>
<table class="table table-borderless bl-3">
  <tr>
<th class="text-right"><%= f.label :"ジャンル" %></th>
<th><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank:"  --選択してください--  " %></th>
<!-- ジャンル入力項目を反映 -->
</tr>

<tr>
<th class="text-right"><%= f.label :"作品名" %></th>
<th><%= f.text_field :title, autofocus: true, autocomplete: "title", placeholder:"作品名", size: 40 %></th>
</tr>

<tr>
<th class="text-right"><%= f.label :image, "作品画像" %></th>
<th><%= f.attachment_field :image %></th>
</tr>

<tr>
<th class="text-right"><%= f.label :"監督名" %></th>
<th><%= f.text_field :director, autofocus: true, autocomplete: "director", placeholder:"監督名", size: 40 %></th>
</tr>

<tr>
<th class="text-right"><%= f.label :"主演" %></th>
<th><%= f.text_field :actor, autofocus: true, autocomplete: "actor", placeholder:"主演", size: 40 %></th>
</tr>

<tr>
<th class="text-right"><%= f.label :"あらすじ" %></th>
<th><%= f.text_area :explain, autofocus: true, autocomplete: "explain", placeholder:"あらすじ", size: 40 %></th>
</tr>

<tr>
  <th></th>
<th><%= f.submit "変更を保存", class: "btn btn-success" %></th>
</tr>

</table>
<% end %>

</div>
  </div>
</div>