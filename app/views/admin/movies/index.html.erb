<h4>作品一覧</h4>

 <div class="col-3">
      <%= link_to '新規作品登録', new_admin_movie_path, class: 'btn btn-primary'%>
    </div>
</div>


<section class="section mt-6">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-5">
        <% @movies.each do |movie| %>
          <div class="card mb-6">
            <header class="card-header">
              <p class="card-header-title">
            <%= link_to attachment_image_tag(movie, :image, format: 'jpeg', size: "140x100", fallback: "no_image.jpg"), movie_path(movie) %>
            <%= movie.id %>
            <%= link_to movie.title, admin_movie_path(movie) %>
            <%= movie.director %>
            <%= movie.actor %>
            <%= movie.genre.name %>
              </p>
            </header>
            <div class="card-content">
              <div class="content">
                <div class="content average-rate">
                  <div class="star-rating mb-2">
                    <div class="star-rating-front" style="width: <%= movie.movie_comment_rate_percentage %>%">★★★★★</div>
                    <div class="star-rating-back">★★★★★</div>
                  </div>
                  <div class="average-rate-display ml-3 pt-2">
                   <%= movie.avg_rate %>点（<%= movie.movie_comments.count %>件のレビュー）
                  </div>
                </div>
              </div>
            </div>
            <footer class="card-footer">
               <%= link_to movie_movie_comments_path(movie), class: "button card-footer-item" do %>
                レビューを見る
              <% end %>
              <%= link_to movie_path(movie), class: "button card-footer-item" do %>
                レビューを書く
              <% end %>
            </footer>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>