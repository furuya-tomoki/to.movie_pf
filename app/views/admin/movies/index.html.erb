<h4>作品一覧</h4>

 <div class="col-3">
      <%= link_to '新規作品登録', new_admin_movie_path, class: 'btn btn-primary'%>
    </div>
</div>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
    　<th>作品画像</th>
      <th>作品ID</th>
      <th>作品名</th>
      <th>監督名</th>
      <th>主演</th>
      <th>ジャンル</th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
    <tr>
      <td><%= link_to attachment_image_tag(movie, :image, format: 'jpeg', size: "140x100", fallback: "no_image.jpg"), movie_path(movie) %></td>
      <td><%= movie.id %></td>
      <td><%= link_to movie.title, admin_movie_path(movie) %></td>
      <td><%= movie.director %></td>
      <td><%= movie.actor %></td>
      <td><%= movie.genre.name %></td>
    </tr>
    <% end %>
  </tbody>